{
    // Positioning
    "layer": "top",
    "height": 25,
    "spacing": 4,
    
    // Apply CSS on Change
    "reload_style_on_change": true,

    // Module Order
    "modules-left": ["hyprland/workspaces", "hyprland/window"],
    "modules-center": ["clock"],
    "modules-right": ["custom/media", "network", "bluetooth", "custom/pipewire", "battery"],
    
    // Module Configuration
    "hyprland/workspaces": {
        "disable-scroll": true, 
        "format": "{icon}",
