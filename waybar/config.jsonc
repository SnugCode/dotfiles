    },
    "clock": {
        "timezone": "Australia/Melbourne",
	"format": "{:%H:%M | %d %b %Y}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}"
